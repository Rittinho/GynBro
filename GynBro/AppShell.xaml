<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GynBro.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:GynBro.View.TabPages"
    Title="GynBro">

    <TabBar>
        <ShellContent
            Title="Criar"
            ContentTemplate="{DataTemplate pages:CreateWorkout}"
            Icon="plus.png"
            Route="CreateWorkout" />
        <ShellContent
            Title="Treino"
            ContentTemplate="{DataTemplate pages:DalyWorkout}"
            Icon="dumbbell.png"
            Route="DalyWorkout" />
        <ShellContent
            Title="Perfil"
            ContentTemplate="{DataTemplate pages:Profile}"
            Icon="profile.png"
            Route="Profile" />
    </TabBar>

</Shell>
